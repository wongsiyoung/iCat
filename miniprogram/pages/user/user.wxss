/**user.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo{
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo {
  padding-left: 120rpx;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar[size] {
  width: 100rpx;
}


.userinfo-avatar:after {
  border: none;
}

.userinfo-flex{
  display: flex;
  flex-direction: column;
}

.userinfo-nickname{
  font-size: 30rpx;
  color: burlywood;
  text-align: left;
  background: rgba(0, 0, 0, 0);
}
.userinfo-nickname::after{
  border: none;
}

.name-hover{
  color: chocolate;
}

.userinfo-introduction {
  font-size: 25rpx;
  color: #000000;
  background-color: rgba(255, 255, 255, 0);
  background-size: cover;
  text-align: left;
  margin-left: 30rpx;
  margin-top: 30rpx;
}

.userinfo-introduction::after{
  border: none;
}

